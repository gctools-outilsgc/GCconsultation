<% provide :title do %>
  <%= t("test.header.title") %> - <%= t("test.menu.legislation") %> - <%= @process.title %> - <%= t("test.legislation.questions.index.title") %> - <%= @question.title %>
<% end %>

<div class="legislation-questions-edit legislation-questions-form">
  <div class="small-12 column">
    <%= back_link_to test_legislation_process_questions_path(@process), t("test.legislation.questions.edit.back") %>

    <h2><%= @process.title %></h2>

    <%= render 'test/legislation/processes/subnav', process: @process, active: 'questions' %>

    <div class="small-12 column">
      <h3 class="inline-block"><%= t("test.legislation.questions.edit.title", question_title: @question.title) %></h3>

      <div class="float-right">
        <%= link_to t("test.legislation.questions.index.delete"), test_legislation_process_question_path(@process, @question),
                    method: :delete,
                    class: 'button hollow alert' %>
      </div>
    </div>

    <%= render 'form', url: test_legislation_process_question_path(@process, @question) %>
  </div>
</div>
