<% provide :title do %>
  <%= t("test.header.title") %> - <%= t("test.menu.legislation") %> - <%= @process.title %> - <%= t("test.legislation.draft_versions.index.title") %>
<% end %>

<div class="legislation-draft-versions-index">

  <%= back_link_to test_legislation_processes_path, t("test.legislation.processes.edit.back") %>

  <h2><%= @process.title %></h2>

  <%= render 'test/legislation/processes/subnav', process: @process, active: 'draft_versions' %>

  <div class="small-12 column">
    <h4 class="inline-block"><%= t("test.legislation.draft_versions.index.title") %></h4>

    <div class="float-right">
      <%= link_to t("test.legislation.draft_versions.index.create"), new_test_legislation_process_draft_version_path, class: "button" %>
    </div>

    <% if @process.draft_versions.any? %>
      <table class="stack">
        <thead>
          <tr>
            <th><%= t("test.legislation.draft_versions.table.title") %></th>
            <th><%= t("test.legislation.draft_versions.table.created_at") %></th>
            <th><%= t("test.legislation.draft_versions.table.status") %></th>
            <th class="text-center"><%= t("test.legislation.draft_versions.table.comments") %></th>
            <th class="text-center"><%= t("test.legislation.draft_versions.table.final_version") %></th>
          </tr>
        </thead>
        <tbody>
        <% @process.draft_versions.each do |draft_version| %>
          <tr id="<%= dom_id(draft_version) %>">
            <td>
              <%= link_to draft_version.title, edit_test_legislation_process_draft_version_path(@process, draft_version) %>
            </td>
            <td><%= draft_version.created_at.to_date %></td>
            <td>
              <% if draft_version.status == 'draft' %>
                <%= t("test.legislation.draft_versions.statuses.draft") %>
                <%= link_to "(#{t('.preview')})", legislation_process_draft_version_path(@process, draft_version)  %>
              <% else %>
                <%= t("test.legislation.draft_versions.statuses.published") %>
              <% end %>
            </td>
            <td class="text-center"><%= draft_version.total_comments %></td>
            <td class="text-center">
              <% if draft_version.final_version %>
                <span class="icon-check" title="<%= draft_version.final_version %>"></span>
              <% else %>
                <span class="icon-x delete" title="<%= draft_version.final_version %>"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
